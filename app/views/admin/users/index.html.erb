<div class="flex justify-between items-center mb-4">
  <h1 class="text-3xl font-bold">Users</h1>
  <%= link_to new_admin_user_path(format: :turbo_stream), class: 'button-submit',
      data: { turbo_frame: "modal" } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="overflow-x-auto">
  <%= turbo_frame_tag "users_list" do %>
    <table class="min-w-full bg-white border border-gray-200">
      <thead>
        <tr class="bg-gray-100">
          <th class="table-header">ID</th>
          <th class="table-header">Email</th>
          <th class="table-header">Roles</th>
          <th class="table-header">Actions</th>
        </tr>
      </thead>
      <tbody id="users_list_body" class="bg-white">
        <% @users.each do |user| %>
          <%= render partial: "user_row", locals: { user: user } %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<div class="mt-5">
  <%= paginate @users %>
</div>
